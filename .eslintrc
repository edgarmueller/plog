{
  "extends": "airbnb",
  "rules": {
    "func-names": ["error", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-multi-comp": [1, { "ignoreStateless": true }],
    "linebreak-style": "off",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "import/no-named-as-default": 0
  },
  "env": {
    "browser": true,
    "jest": true
  }
}